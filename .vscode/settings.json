{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.rulers": [80],
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "always"
  },
  "files.eol": "\n",
  "editor.defaultFormatter": null,
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  }
}
